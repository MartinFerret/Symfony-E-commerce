{% extends 'base.html.twig' %}

{% block content %} 

<div class="row">
    <div class="col-md-5">
        <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}">
    </div>
    <div class="col-md-7 my-auto">
        <h3>{{ product.name }}</h3>
        <p>{{ product.subtitle }}</p>
        <span class="product-single-price">{{ (product.price / 100)|number_format(2, ',', '.') }} euros</span>
        <hr>
        <p>{{ product.description }}</p>
        <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
    </div>
</div>

{% endblock %}
